<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Catálogo Musical</title>
</head>
<body>
  <h1>Catálogo de Discos</h1>
  
  <h2>Listagem de Discos</h2>
  <ul>
    <% discos.forEach(disco => { %>
      <li>
        <strong><%= disco.titulo %></strong> - <%= disco.anoLancamento %>
        <br>
        <img src="<%= disco.capa %>" alt="Capa do disco" width="100">
      </li>
    <% }) %>
  </ul>

  <h2>Cadastrar Novo Disco</h2>
  <form action="/discos" method="POST" enctype="multipart/form-data">
    <label for="titulo">Título:</label>
    <input type="text" name="titulo" id="titulo" required>
    <br>
    <label for="anoLancamento">Ano de Lançamento:</label>
    <input type="number" name="anoLancamento" id="anoLancamento" required>
    <br>
    <label for="generoId">Gênero:</label>
    <select name="generoId" id="generoId" required>
      <!-- Opções de gêneros -->
    </select>
    <br>
    <label for="capa">Capa:</label>
    <input type="file" name="capa" id="capa" accept="image/*">
    <br>
    <button type="submit">Cadastrar Disco</button>
  </form>
</body>
</html>
