<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styledisco.css">
  <title>Catálogo Musical</title>
</head>
<body>
  <header>
    <h1>Catálogo de Discos</h1>
    <nav>
      <a href="/">Página Inicial</a>
      <a href="/disco/novo">Cadastrar Disco</a> 
    </nav>
  </header>

  <section>
    <h2>Discos Cadastrados</h2>
    <div class="discos-lista">
      <% if (discos && discos.length > 0) { %>
        <ul>
          <% discos.forEach(disco => { %>
            <li>
              <h3><%= disco.titulo %> - <%= disco.ano_lancamento %></h3>
              <% if (disco.capa) { %>
                <img src="<%= disco.capa %>" alt="Capa do disco <%= disco.titulo %>">
              <% } %>
              <p>Gênero: <%= disco.Genero.nome %></p> 
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>Não há discos cadastrados.</p>
      <% } %>
    </div>
  </section>
</body>
</html>
